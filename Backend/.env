DB_NAME=Lucky
DB_PORT=3306

# Game Configuration
# Hidden Numbers for Lucky 4 Game (4 integers between 1-10)
# You can change these numbers to set different winning combinations
HIDDEN_NUMBERS=2,5,8,3

# ==========================================
# SETUP GUIDE:
# ==========================================
# 1. Create MySQL database: CREATE DATABASE Lucky;
# 2. Run schema: mysql -u root -p Lucky < schema.sql
# 3. Update DB_USER with your MySQL username
# 4. Update DB_PASSWORD with your MySQL password
# 5. Save this file
# 6. Run: npm install
# 7. Run: npm start
